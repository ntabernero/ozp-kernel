<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
           ">

    <!-- Use Pax Web WhiteBoard ..-->
    <service id="meteorPubSubServlet" interface="javax.servlet.http.HttpServlet">
        <service-properties>
            <entry key="urlPatterns" value="/pubsub/*"/>
            <entry key="servlet-name" value="KernelAtmosphereMeteorPubSubServlet"/>
            <!--<entry key="httpContext.id" value="pubsub"/>-->
        </service-properties>
        <bean class="org.ozoneplatform.kernel.bundles.server.atmosphere.MeteorPubSub">
            <property name="bundleContext" ref="blueprintBundleContext"/>
        </bean>
    </service>

    <bean id="atmosphereBusImpl" class="org.ozoneplatform.kernel.bundles.server.atmosphere.AtmosphereBusImpl">
        <property name="m_meteorPubSubServletReg" ref="meteorPubSubServlet"/>
    </bean>

    <service ref="atmosphereBusImpl" interface="org.ozoneplatform.kernel.bundles.server.atmosphere.api.AtmosphereBus"/>

</blueprint>
